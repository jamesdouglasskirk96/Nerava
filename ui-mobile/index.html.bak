<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <title>Nerava</title>
  <link rel="stylesheet" href="./styles.css?v=20251022-3" />
</head>
<body>
  <div id="app">
    <!-- Brand (centered) -->
    <header id="brand" class="brand">
      <div class="brand-lockup" aria-label="Nerava">
        <svg width="180" height="34" viewBox="0 0 670 140" xmlns="http://www.w3.org/2000/svg" role="img">
          <g fill="#0C1E33">
            <text x="0" y="100" font-family="Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial" font-weight="800" font-size="110" letter-spacing="2">NERAVA</text>
          </g>
          <path d="M610 10 L585 70 H630 L605 130 L660 60 H615 L640 10 Z" fill="#FFFFFF"/>
        </svg>
      </div>
    </header>

    <!-- Incentive banner (centered; Explore only) -->
    <div id="incentiveBanner" class="banner hidden">
      <span class="bolt">⚡</span>
      <span id="bannerText">Cheaper charging now</span>
    </div>

    <main id="view"></main>

    <!-- Floating Plan Trip button -->
    <button id="planFab" class="fab" title="Plan a Trip">🗺️</button>

    <!-- Bottom nav -->
    <nav id="tabbar" class="tabbar">
      <button data-tab="explore" class="tab active">
        <span class="ico">🗺️</span><span>Explore</span>
      </button>
      <button data-tab="charge" class="tab">
        <span class="ico">⚡</span><span>Charge</span>
      </button>
      <button data-tab="wallet" class="tab">
        <span class="ico">💳</span><span>Wallet</span>
      </button>
      <button data-tab="profile" class="tab">
        <span class="ico">👤</span><span>Profile</span>
      </button>
    </nav>
  </div>

  <script type="module" src="./app.js?v=20251022-3"></script>
</body>
</html>
