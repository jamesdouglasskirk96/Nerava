:root{
  --navy:#0C1E33; --ink:#0b0f16; --panel:#0f172a; --muted:#9aa6b2;
  --banner:#3cd173; --text:#e5e7eb; --stroke:#1e293b;
}
*{box-sizing:border-box}
html,body,#app{height:100%;margin:0;background:var(--ink);color:var(--text);font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif}

/* Header + Banner (centered) */
.brand{height:56px;background:#060a0f;border-bottom:1px solid #0d1420;display:flex;align-items:center;justify-content:center;padding:0 16px;position:sticky;top:0;z-index:10}
.brand-lockup svg{display:block;height:34px}
.banner{display:flex;gap:10px;align-items:center;justify-content:center;min-height:44px;background:var(--banner);color:#08230f;font-weight:800;padding:8px 16px}
.banner.hidden{display:none}
.banner .bolt{filter: drop-shadow(0 1px 0 rgba(0,0,0,.2))}

#view{padding:12px 12px 100px 12px}

/* Cards / layout */
.card{background:#0f172a;border:1px solid var(--stroke);border-radius:18px;padding:16px;box-shadow:0 8px 32px rgba(0,0,0,.35)}
.row{display:flex;justify-content:space-between;align-items:center;gap:12px}
.badge{background:#111827;color:#e5e7eb;border:1px solid #1f2937;border-radius:999px;padding:6px 12px;font-size:12px}
.btn{all:unset;display:inline-flex;align-items:center;justify-content:center;background:#22c55e;color:#052b13;font-weight:800;padding:10px 16px;border-radius:14px;cursor:pointer}
.btn.secondary{background:#0b1220;color:#e5e7eb;border:1px solid #1f2937}
.stack{display:flex;flex-direction:column;gap:12px}
.grid{display:grid;grid-template-columns:1fr 1fr;gap:10px}
.muted{color:var(--muted)}

/* Scroll regions for Wallet/Profile content */
.panel{margin-top:12px}
.panel .scroll{max-height:46vh;overflow:auto;padding-right:6px}

/* Logo rail */
.logo-rail{display:flex;align-items:center;gap:12px}
.logo-rail img{width:28px;height:28px;border-radius:999px;object-fit:cover;border:1px solid #1f2937;background:#0b1220}

/* Inputs */
.field{display:flex;gap:8px}
input[type="text"]{flex:1;background:#0b1220;color:#e5e7eb;border:1px solid #1f2937;border-radius:12px;padding:10px}
label.chk{display:flex;align-items:center;gap:8px}

/* Floating Action Button */
.fab{position:fixed;right:18px;bottom:94px;height:56px;width:56px;border-radius:999px;background:#0d1420;border:1px solid var(--stroke);color:#fff;display:flex;align-items:center;justify-content:center;box-shadow:0 10px 24px rgba(0,0,0,.35);cursor:pointer}
.fab.hidden{display:none}

/* Bottom tabbar */
.tabbar{position:fixed;left:0;right:0;bottom:0;height:72px;background:#0b0f16;border-top:1px solid #0d1420;display:flex;justify-content:space-around;align-items:center}
.tab{all:unset;display:flex;flex-direction:column;align-items:center;gap:4px;padding:8px 12px;border-radius:14px;color:#9aa6b2;min-width:72px;text-align:center}
.tab.active{background:#0d1420;color:#fff}
.tab .ico{font-size:20px;line-height:20px}
