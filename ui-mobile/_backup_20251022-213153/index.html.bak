<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Nerava</title>

  <!-- App CSS -->
  <link rel="stylesheet" href="css/style.css" />

  <!-- Leaflet (ensures L is defined even if local bundling fails) -->
  <link
    rel="stylesheet"
    href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
    crossorigin=""
  />
  <script
    src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
    crossorigin=""
    defer
  ></script>

  <link rel="icon" href="assets/favicon.ico" />
  <style>
    /* Guarantees the map is visible full-bleed behind content */
    html, body { height: 100%; }
    #app { position: relative; height: 100%; }
    #map {
      position: absolute;
      inset: 0;
      /* if your CSS already sets map height, this is harmless */
      min-height: 100%;
      z-index: 1;
    }
    /* Cards/nav sit over map */
    .ui-layer { position: relative; z-index: 2; }
  </style>
</head>
<body>
  <div id="app">
    <!-- MAP BACKGROUND -->
    <div id="map"></div>

    <!-- TOP BAR + BANNER (your existing styles will theme these) -->
    <header class="ui-layer">
      <div id="appBar" class="app-bar">
        <div class="brand">
          <span class="brand-word">NERAVA</span>
          <img src="assets/bolt-white.svg" alt="" class="brand-bolt" />
        </div>
      </div>
      <div id="dealBanner" class="deal-banner">⚡ Cheaper charging now</div>
    </header>

    <!-- HUB CARD -->
    <main class="ui-layer">
      <section id="hub-card" class="card hub-card">
        <h2 class="hub-name">Nerava Hub</h2>
        <div class="hub-subtitle">Recommended</div>

        <div class="pill-row">
          <span class="pill"><strong>3</strong>&nbsp;free</span>
          <span class="pill">10% cheaper</span>
        </div>

        <div class="logo-row">
          <img src="assets/starbucks.png" alt="Starbucks" class="merchant-logo" />
          <img src="assets/cfa.jpeg" alt="Chick-fil-A" class="merchant-logo" />
          <img src="assets/mcds.png" alt="McDonald's" class="merchant-logo" />
        </div>

        <div class="meta-line">
          <span class="free-count">3 free</span>
          <span class="dot">•</span>
          <span class="hub-area">Domain, Austin</span>
        </div>

        <button id="navigateBtn" class="btn btn-primary btn-wide">Navigate</button>
      </section>
    </main>

    <!-- NAV BAR -->
    <nav class="ui-layer bottom-nav">
      <button id="tabExplore" class="tab active">
        <img src="assets/nav-explore.svg" alt="" />
        <span>Explore</span>
      </button>
      <button id="tabCharge" class="tab">
        <img src="assets/nav-charge.svg" alt="" />
        <span>Charge</span>
      </button>
      <button id="tabWallet" class="tab">
        <img src="assets/nav-wallet.svg" alt="" />
        <span>Wallet</span>
      </button>
      <button id="tabProfile" class="tab">
        <img src="assets/nav-profile.svg" alt="" />
        <span>Profile</span>
      </button>
    </nav>
  </div>

  <!-- App JS (safe init & guards inside) -->
  <script src="js/app.js?v=8" defer></script>
</body>
</html>
