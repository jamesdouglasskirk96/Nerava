# Nerava Backend Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to git - it contains secrets

# Environment
# Options: local, dev, prod
ENV=local
REGION=local

# Database Configuration
DATABASE_URL=sqlite:///./nerava.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/nerava

# JWT Settings
# REQUIRED in non-local environments: Must be a secure random value
# Generate with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
JWT_SECRET=dev-secret
JWT_ALG=HS256

# Token Encryption
# REQUIRED in non-local environments for secure token storage (Square tokens, vehicle tokens)
# Generate with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
# Must be exactly 44 characters (base64-encoded 32-byte Fernet key)
TOKEN_ENCRYPTION_KEY=TaHJDO442DD22r5y-jQYw_ig0MUouqbA0LjCS7e9C2M=

# Public API Base URL (for redirects and webhooks)
PUBLIC_BASE_URL=http://127.0.0.1:8001
FRONTEND_URL=http://localhost:8001/app

# Stripe Configuration
# REQUIRED in non-local environments for webhook verification
STRIPE_SECRET=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CONNECT_CLIENT_ID=ca_...

# Square API Configuration
SQUARE_ENV=sandbox
SQUARE_APPLICATION_ID_SANDBOX=REPLACE_ME
SQUARE_APPLICATION_SECRET_SANDBOX=REPLACE_ME

# CORS Configuration (comma-separated list of origins)
# In production, use explicit origins: https://app.nerava.app,https://www.nerava.app
ALLOWED_ORIGINS=*

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Demo Mode (local only - disabled in production)
DEMO_MODE=false
DEMO_ADMIN_KEY=demo-admin-key

# HTTPS (set to true if using HTTPS in local dev)
HTTPS=false
